<?xml version="1.0" encoding="utf-8"?>
<!--
    Network security config for SpeedShare.
    Allows cleartext HTTP on private LAN IP ranges only.
    This is needed for the Sync feature which serves files over HTTP on the local network.
    All connections stay local â€” no internet cleartext is permitted.
-->
<network-security-config>
    <!-- Allow cleartext traffic to private LAN ranges only -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- RFC-1918 private ranges -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
        <!-- Localhost for debug/testing -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    <!-- Everything else uses encrypted connections by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
