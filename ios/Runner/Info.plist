<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>SpeedShare</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>SpeedShare</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- ============================================================ -->
	<!-- Local Network permission — required for LAN socket discovery  -->
	<!-- iOS 14+ requires this to use the local network                -->
	<!-- ============================================================ -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>SpeedShare needs local network access to discover and connect to other devices on the same Wi-Fi network for file transfers.</string>

	<!-- Bonjour services declared for local network permission dialog -->
	<key>NSBonjourServices</key>
	<array>
		<string>_speedshare._tcp</string>
		<string>_speedshare._udp</string>
	</array>

	<!-- ============================================================ -->
	<!-- File access permission descriptions                           -->
	<!-- ============================================================ -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>SpeedShare needs access to your photo library to send photos and videos to other devices.</string>

	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>SpeedShare needs permission to save received photos and videos to your photo library.</string>

	<!-- ============================================================ -->
	<!-- App Transport Security — allow LAN HTTP for Sync feature      -->
	<!-- ============================================================ -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Block all by default -->
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<!-- Allow cleartext HTTP on local (non-public) networks -->
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>

	<!-- ============================================================ -->
	<!-- Supported file types for document sharing via Files app       -->
	<!-- ============================================================ -->
	<key>UISupportsDocumentBrowser</key>
	<true/>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<true/>

	<!-- ============================================================ -->
	<!-- UI Configuration                                              -->
	<!-- ============================================================ -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
</dict>
</plist>
